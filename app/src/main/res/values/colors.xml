<?xml version="1.0" encoding="utf-8"?>
<!--
    颜色资源文件 (colors.xml)
    
    该文件定义了应用程序中使用的颜色常量。这些颜色主要用于传统的View系统，
    而Jetpack Compose主要使用Kotlin代码中定义的颜色（如Color.kt文件）。
    
    颜色值格式：#AARRGGBB
    - AA: Alpha透明度 (00-FF)
    - RR: Red红色分量 (00-FF) 
    - GG: Green绿色分量 (00-FF)
    - BB: Blue蓝色分量 (00-FF)
-->
<resources>
    <!-- Material Design调色板 - 紫色系列 -->
    <!-- 浅紫色，用于深色主题的主色调 -->
    <color name="purple_200">#FFBB86FC</color>
    
    <!-- 中等紫色，用于浅色主题的主色调 -->
    <color name="purple_500">#FF6200EE</color>
    
    <!-- 深紫色，用于主色调的深色变体 -->
    <color name="purple_700">#FF3700B3</color>
    
    <!-- Material Design调色板 - 青绿色系列 -->
    <!-- 浅青绿色，用于次要色调和强调色 -->
    <color name="teal_200">#FF03DAC5</color>
    
    <!-- 深青绿色，用于次要色调的深色变体 -->
    <color name="teal_700">#FF018786</color>
    
    <!-- 基础颜色 -->
    <!-- 纯黑色 -->
    <color name="black">#FF000000</color>
    
    <!-- 纯白色 -->
    <color name="white">#FFFFFFFF</color>
</resources>
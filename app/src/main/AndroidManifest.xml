<?xml version="1.0" encoding="utf-8"?>
<!--
    Android应用程序清单文件 (AndroidManifest.xml)
    
    该文件是Android应用程序的核心配置文件，定义了应用程序的基本信息、权限、
    组件（Activity、Service、BroadcastReceiver、ContentProvider）等。
    系统在安装和运行应用程序时会读取此文件来了解应用程序的结构和需求。
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <!-- 网络权限：允许应用程序访问网络进行数据请求 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 
        应用程序配置块
        定义应用程序的全局属性和设置
    -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Classwork2">
        
        <!--
            allowBackup="true": 允许应用程序参与系统备份和恢复机制
            dataExtractionRules: 指定Android 12+的数据提取规则配置文件
            fullBackupContent: 指定完整备份的规则配置文件
            icon: 应用程序在系统中显示的图标
            label: 应用程序在系统中显示的名称
            roundIcon: 圆形图标，用于支持圆形图标的启动器
            supportsRtl="true": 支持从右到左的布局（如阿拉伯语、希伯来语）
            theme: 应用程序的默认主题样式
        -->
        
        <!--
            LoginActivity声明
            定义应用程序的登录Activity组件，作为应用入口
        -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Classwork2">
            
            <!--
                Intent过滤器 - 定义此Activity可以响应的Intent
                这个过滤器使LoginActivity成为应用程序的入口点
            -->
            <intent-filter>
                <!-- 主要Action：表示这是应用程序的主入口 -->
                <action android:name="android.intent.action.MAIN" />

                <!-- 启动器类别：表示此Activity应该出现在系统启动器中 -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!--
            MainActivity声明
            定义应用程序的主Activity组件
        -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Classwork2">
        </activity>
    </application>

</manifest>